<div class="center-items">
  <div class="form-container">
    
    <h1 class="text-center mb-3">Log in to your accountðŸŒ³</h1>

    <%= form_with url: login_path, data: { "turbo" => "false" } do |f|%>

    <%= render "shared_partials/app_messages/error" %>

      <fieldset>
        <div class="form-group">
          <div for="email" class="form-label mt-4">Email address</div>
          <%= f.text_field :email, :class => 'form-control', :placeholder => 'Enter email'%>
        </div>

        <div class="form-group">
          <label for="password" class="form-label mt-4">Password</label>
          <%= f.password_field :password, :class => 'form-control', :placeholder => 'Enter password'%>
        </div>

        <div class = "mt-3"><%= link_to "Forgot your password?", password_reset_path %></div>
        
        <div class="d-grid gap-2 d-flex justify-content-center">
          <%= f.submit "Login!", :class => 'btn btn-block btn-primary mt-5' %>
        </div>
      </fieldset>
    <% end %>

    <div class = "text-center mt-5">
      <p><strong>Not a member yet?</strong></p>
      <strong><%= link_to "Join now!", register_path %></strong>
    </div>

  </div>
</div>
