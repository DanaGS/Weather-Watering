<div id="<%= dom_id user %>">

  <h1>My Account</h1>

  <div class="card border-primary my-5" style="padding: 0;">
    <div class="card-header"><hr class="text-primary"/></div>
    <div class="card-body">

      <div class="row">
        <div class="col-sm-9">
          Email: <%= user.email %>
        </div>
        <div class="col-sm-3 d-flex justify-content-sm-end justify-content-start mt-sm-0 mt-3">
          <%= button_to "Edit", edit_email_path, method: :get, data: { turbo_frame: 'modal' }, :class => "btn btn-info btn-sm" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-sm-9">
          Address: <%= user.location.address %>
        </div>
        <div class="col-sm-3 d-flex justify-content-sm-end justify-content-start mt-sm-0 mt-3">
          <%= button_to "Edit", edit_address_path, method: :get, data: { turbo_frame: 'modal' }, :class => "btn btn-info btn-sm" %>
        </div>
      </div>

    </div>
  </div>

  <hr class="text-primary"/>

  <div class="row mb-5 mt-3">
    <h3>Password and Authentication</h3>
    <div class=" mt-3">
      <%= button_to "Change password", edit_password_path, method: :get, data: { turbo_frame: 'modal' }, :class => "btn btn-info" %>
    </div>
  </div>

  <hr class="text-primary"/>

  <div class="row mb-5 mt-3">
    <h5>Account Removal</h5>
    <div class=" mt-3">
      <%= button_to "Delete account", delete_user_path, method: :delete, data: { confirm: "Are you sure?"}, data: { "turbo" => "false" }, :class => "btn btn-danger" %>
    </div>
  </div>
</div>